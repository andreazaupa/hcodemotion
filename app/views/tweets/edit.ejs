<div class="page-header"><h1>Edit tweet</h1></div>

<% form_for(tweet, {action: path_to.tweet(tweet), method: 'PUT', id: "tweet_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('tweets/form.ejs', {locals: {form: form, tweet: tweet}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update tweet', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.tweet(tweet), {class: 'btn'}) %>
    </div>
<% });%>