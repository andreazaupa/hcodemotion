<div class="page-header">
    <h1>Details of tweet</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>message</th><td><%= tweet.message %></td></tr>
        <tr><th>author</th><td><%= tweet.author %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_tweet(tweet), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.tweet(tweet), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.tweets) %>
</div>