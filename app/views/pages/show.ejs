<div class="page-header">
    <h1>Details of page</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>title</th><td><%= page.title %></td></tr>
        <tr><th>body</th><td><%= page.body %></td></tr>
        <tr><th>author</th><td><%= page.author %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_page(page), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.page(page), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.pages) %>
</div>